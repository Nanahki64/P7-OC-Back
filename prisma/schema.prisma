// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  firstName     String
  lastName      String
  password      String
  isAdmin       Boolean   @default(false)
  avatarUrl     String    @default("https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y")
  posts         Post[]
  comment       Comment[]
}

model Post {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  content       String    @default("")
  imageUrl      String    @default("")
  createdAt     DateTime  @default(now())
  updateAt      DateTime  @updatedAt
  author        User      @relation(fields: [authorId], references: [id])
  authorId      String    @db.ObjectId
  comments      Comment[]
}

// Comments contain a comment string and connect back to the post.
// postId must have @db.ObjectId to match up with Post's id type
model Comment {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  post          Post      @relation(fields: [postId], references: [id])
  postId        String    @db.ObjectId
  author        User      @relation(fields: [authorId], references: [id])
  authorId      String    @db.ObjectId
  comment       String
  createdAt     DateTime  @default(now())
  updateAt      DateTime  @updatedAt
}